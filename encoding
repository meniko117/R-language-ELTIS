#считывание файла и запись в кодировке
con<-read.csv("C:/Users/Hp/Dropbox/Мои документы/Программирование/R/Project/ELTIS/Components data.csv")
con2 <- as.data.frame(sapply(con,gsub,pattern=";",replacement=","))
write.csv(con2, 'C:/Users/Hp/Dropbox/Мои документы/Программирование/R/Project/ELTIS/Components data UTF.csv')

# вставка в write (..., fileEncoding = "UTF-8")


